      UserData: !Base64 
        'Fn::Join':
          - ''
          - - |
              #!/bin/bash -xe
            - |
              # cloud-init
            - !If 
              - UseProxy
              - !Join 
                - ''
                - - !Sub 
                    - |
                      export HTTPS_PROXY="https://${proxyUrl}"
                    - proxyUrl: !Ref DSProxyUrl
                  - !Sub 
                    - |
                      export HTTP_PROXY="http://${proxyUrl}"
                    - proxyUrl: !Ref DSProxyUrl
                  - |
                    export NO_PROXY="169.254.169.254,localhost,127.0.0.1"
                  - !Sub
                    - |
                      echo -e "proxy=http://${proxyUrl}" >> /etc/yum.conf
                    - proxyUrl: !Ref DSProxyUrl
              - ''
            - 'curl -O '
