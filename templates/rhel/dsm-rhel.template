            /etc/cfn/dsmConfiguration.properties:
              content: !Join
                - ''
                - - !If
                    - KeyProvided
                    - !Join
                      - ''
                      - - LicenseScreen.License.-1=
                        - !Ref DSIPLicenseKey
                    - |+

