    - !Condition IsFirstNode
  KeyProvided: !Not 
    - !Equals 
      - !Ref DSIPLicenseKey
      - XX-XXXX-XXXXX-XXXXX-XXXXX-XXXXX-XXXXX
  AddToELB: !Not 
    - !Equals 
      - !Ref DSIELB
      - ''
  WaitNotProvided: !Equals 
    - DSM1CompleteWaitHandle
    - ''
  SQLplusELB: !And 
    - !Condition AddToELB
    - !Condition DoSQLSetup
  AddNodePlusELB: !And 
    - !Not 
      - !Condition IsFirstNode
    - !Condition AddToELB
  IsFirstNodePlusELB: !And 
